.row
  .col-xs-12.col-sm-12.col-md-12.text-center
    %h1#signup_title Let your friends know who you are
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    = link_to omniauth_authorize_path(resource_name, :google_oauth2), class: 'btn btn-block btn-social btn-google-plus' do
      %i.fa.fa-google-plus
      Sign in with Google
    .divider
      %span.divider_text
        or
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f|
      = devise_error_messages!
      .form-group
        = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'
      .form-group
        = f.email_field :email, class: 'form-control', placeholder: 'Email'
      .form-group
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password (#{@minimum_password_length} characters minimum)"
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password confirmation"
      = f.submit "Let's do this", class: 'btn btn-block btn-primary'

    = render "devise/shared/links"
