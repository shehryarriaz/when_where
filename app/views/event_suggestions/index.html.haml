%table
  %caption
    %h2 Hosting
    - if @events_as_host
      - @events_as_host.each do |event|
        %tr
          %td
            = link_to event.name, event
    - else
      %tr
        %td Hosting no events
%table
  %caption
    %h2 Invitations
    %tr
      %th Responded to
    - if @events_responded_to
      - @events_responded_to.each do |event|
        %tr
          %td
            = link_to event.name, event
    - else
      %tr
        %td No responses
    %tr
      %th Pending
    - if @events_pending
      - @events_pending.each do |event|
        %tr
          %td
            = link_to event.name, event
    - else
      %tr
        %td No pending events