.row
  .col-xs-12.col-sm-6.col-md-6
    %h2 #{@event_suggestion.name}
    %h2
      %small Hosted by: #{@event_suggestion.host.name || @event_suggestion.host.email}
    %br
    %p.lead #{@event_suggestion.description}

    %h3.text-success Status: #{@event_suggestion.status}
    %br
    %p
      %strong Location:
      #{@event_suggestion.location}
    %p
      %strong Time:
      #{@event_suggestion.start_time.strftime("%I:%M %p")}

    %h3 Who's coming
    %ul.list-unstyled
      

    %h3 Invited
    %ul.list-unstyled
      - @event_suggestion.invitees.each do |invitee|
        - if invitee.name
          %li #{link_to invitee.name, user_path(invitee)}
        - else
          %li #{link_to invitee.email, user_path(invitee)}