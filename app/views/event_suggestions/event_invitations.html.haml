.row
  .col-xs-12.col-sm-12.col-md-12
    - if @events_pending.any?
      %h2 Events requesting your glorious presence
      .btn-group-vertical.event_list
        - @events_pending.each do |event|
          = link_to event.name, event, class: "btn btn-default btn-lg"
    - else
      %h2 Not that popular, huh?
      .btn-group-vertical.event_list
        = link_to "Create an event of your own!", new_event_suggestion_path, class: "btn btn-default btn-lg"